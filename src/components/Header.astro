---
import Navigation from './Navigation.astro';
import Logo from './ui/Logo.astro';
---

<header>
  <div class="container">
    <nav>
      <Logo />
      <Navigation />
    </nav>
  </div>
</header>

<style>
  header {
    padding: 1.5rem 0;
    position: fixed;
    width: 100%;
    top: 0;
    background: rgba(var(--color-background), 0.9);
    backdrop-filter: blur(5px);
    z-index: 100;
  }

  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
</style>