---
interface Props {
  title: string;
  subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<div class="section-heading">
  <h2>{title}</h2>
  {subtitle && <p>{subtitle}</p>}
</div>

<style>
  .section-heading {
    text-align: center;
    max-width: 800px;
    margin: 0 auto 2rem;
  }

  h2 {
    font-size: 2.5rem;
    color: rgb(var(--color-text));
    margin-bottom: 1rem;
  }

  p {
    font-size: 1.2rem;
    color: rgb(var(--color-text-light));
    line-height: 1.6;
  }

  @media (max-width: 768px) {
    h2 {
      font-size: 2rem;
    }

    p {
      font-size: 1.1rem;
    }
  }
</style>