---
import TimelineEntry from '../ui/TimelineEntry.astro';
import SectionHeading from '../ui/SectionHeading.astro';

const timelineEntries = [
  {
    number: "1",
    title: "Track Your Expenses",
    description: "Easily log and categorize your daily expenses with our intuitive interface. Get real-time insights into your spending patterns.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M4 3h16a2 2 0 0 1 2 2v6a10 10 0 0 1-10 10A10 10 0 0 1 2 11V5a2 2 0 0 1 2-2z"/><polyline points="8 10 12 14 16 10"/></svg>`
  },
  {
    number: "2",
    title: "Set Smart Budgets",
    description: "Create custom budgets for different categories and receive instant notifications when you're approaching your limits.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 2v20M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/></svg>`
  },
  {
    number: "3",
    title: "Analyze & Optimize",
    description: "View detailed reports and analytics to understand your financial habits better. Make informed decisions to achieve your financial goals.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M3 3v18h18"/><path d="m19 9-5 5-4-4-3 3"/></svg>`
  },
  {
    number: "4",
    title: "Secure & Private",
    description: "Your financial data is encrypted and stored securely. We prioritize your privacy and security above everything else.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"/><path d="M7 11V7a5 5 0 0 1 10 0v4"/></svg>`
  }
];
---
<section class="timeline-section section-padding">
  <div class="container">
    <SectionHeading
      title="How Runora Works"
      subtitle="Your journey to financial freedom starts here"
    />
    <div class="timeline-container">
      <div class="timeline">
        {timelineEntries.map((entry, index) => (
          <TimelineEntry 
            {...entry} 
            isLast={index === timelineEntries.length - 1}
          />
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .timeline-section {
    background: #008080;
    padding: 4rem 0;
  }

  .timeline-container {
    background: rgba(0, 0, 0, 0.8);
    border-radius: 1.5rem;
    padding: 3rem 2rem;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
    margin-top: 3rem;
    position: relative;
    overflow: hidden;
  }

  .timeline {
    position: relative;
    max-width: 800px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  /* Mobile Styles */
  @media (max-width: 768px) {
    .timeline-section {
      padding: 3rem 0;
    }

    .timeline-container {
      padding: 2rem 1rem;
      margin-top: 2rem;
      border-radius: 1rem;
    }

    .timeline {
      padding: 0 0.5rem;
    }
  }

  /* Add subtle gradient overlay */
  .timeline-container::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(45deg, 
      rgba(var(--color-primary), 0.1),
      transparent 40%);
    pointer-events: none;
  }
</style>