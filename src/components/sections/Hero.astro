---
// Hero.astro
interface Props {
  title: string;
  description: string;
  githubUrl: string;
}

const { 
  title = "Smart Finance Tracking Made Simple",
  description = "Take control of your expenses and achieve your financial goals with Runora's intuitive budget tracking features.",
  githubUrl = "https://github.com/frostdev7506/runora"
} = Astro.props;
---

<section class="hero">
  <div class="container">
    <div class="content" data-aos="fade-right">
      <h1>{title}</h1>
      <p>{description}</p>
      <div class="buttons">
        <a href={githubUrl} class="btn primary">
          <span>View on GitHub</span>
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"/>
          </svg>
        </a>
        <a href="#features" class="btn secondary">Learn More</a>
      </div>
    </div>
    <div class="image-wrapper" data-aos="fade-left" data-aos-delay="200">
      <img src="/app-mockup.png" alt="Runora App" />
    </div>
  </div>
</section>

<style>
  .hero {
    padding: 6rem 2rem;
    background: linear-gradient(135deg, #000 0%, #008080 100%);
    min-height: calc(100vh - 80px);
    display: flex;
    align-items: center;
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .content {
    max-width: 600px;
  }

  h1 {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    line-height: 1.1;
    font-weight: 800;
    background: linear-gradient(135deg, #008080 0%, #20b2aa 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    margin-bottom: 1.5rem;
  }

  p {
    font-size: clamp(1.1rem, 2vw, 1.25rem);
    line-height: 1.6;
    color: #4a5568;
    margin-bottom: 2.5rem;
  }

  .buttons {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.875rem 1.75rem;
    border-radius: 50px;
    font-weight: 600;
    transition: all 0.3s ease;
    font-size: 1.1rem;
    text-decoration: none;
  }

  .btn.primary {
    background: linear-gradient(135deg, #008080 0%, #20b2aa 100%);
    color: white;
    box-shadow: 0 4px 6px -1px rgba(0, 128, 128, 0.2), 0 2px 4px -1px rgba(0, 128, 128, 0.1);
  }

  .btn.secondary {
    background: white;
    color: #008080;
    border: 2px solid #008080;
  }

  .btn:hover {
    transform: translateY(-2px);
  }

  .btn.primary:hover {
    box-shadow: 0 6px 8px -1px rgba(0, 128, 128, 0.3), 0 4px 6px -1px rgba(0, 128, 128, 0.2);
  }

  .image-wrapper {
    width: 100%;
    
    display: flex;
    position: relative;
    animation: float 6s ease-in-out infinite;
  align-items: flex-end;
  justify-content: flex-end;
  }

  .image-wrapper img {
    width: 100%;
    height: auto;
    max-height: 600px;
    object-fit: contain;
    border-radius: 24px;

  }

  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-20px); }
  }

  @media (max-width: 1024px) {
    .container {
      grid-template-columns: 1fr;
      text-align: center;
      gap: 2rem;
    }

    .content {
      margin: 0 auto;
    }

    .buttons {
      justify-content: center;
    }

    .image-wrapper {
      margin: 0 auto;
      max-width: 80%;
    }
  }

  @media (max-width: 640px) {
    .hero {
      padding: 4rem 1rem;
    }

    .buttons {
      flex-direction: column;
      margin-top: 10rem;
    }

    .btn {
      
      justify-content: center;
    }

    .image-wrapper {
      max-width: 100%;
    }
     .image-wrapper img {
   display: none;

  }
  }
</style>