<section id="blog" class="blog ">
  <div class="container">
      <div class="blog-svg-container">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 400 300" class="blog-svg">
              <defs>
                  <linearGradient id="blogGradient" x1="0%" y1="0%" x2="100%" y2="100%">
                      <stop offset="0%" style="stop-color:#e3f2fd;stop-opacity:0.5" />
                      <stop offset="100%" style="stop-color:#bbdefb;stop-opacity:0.3" />
                  </linearGradient>
              </defs>
              <rect x="0" y="0" width="400" height="300" fill="url(#blogGradient)" rx="20" />
              <g transform="translate(100, 80)">
                  <g class="blog-stack">
                      <rect x="0" y="20" width="200" height="120" fill="#ffffff" rx="10" filter="drop-shadow(3px 3px 3px rgba(0,0,0,0.1))" />
                      <rect x="5" y="10" width="200" height="120" fill="#f5f5f5" rx="10" filter="drop-shadow(3px 3px 3px rgba(0,0,0,0.1))" />
                      <rect x="10" y="0" width="200" height="120" fill="#ffffff" rx="10" filter="drop-shadow(3px 3px 3px rgba(0,0,0,0.1))">
                          <animate attributeName="y" values="0;-5;0" dur="3s" repeatCount="indefinite" />
                      </rect>
                      <rect x="30" y="20" width="100" height="10" fill="#2196f3" rx="2" />
                      <rect x="30" y="40" width="160" height="6" fill="#90caf9" rx="2" />
                      <rect x="30" y="55" width="140" height="6" fill="#90caf9" rx="2" />
                      <rect x="30" y="70" width="150" height="6" fill="#90caf9" rx="2" />
                  </g>
              </g>
              <g transform="translate(50, 150)">
                  <circle cx="0" cy="0" r="15" fill="#4caf50" opacity="0.8">
                      <animate attributeName="r" values="15;17;15" dur="2s" repeatCount="indefinite" />
                  </circle>
                  <path d="M-5 0 L5 0 M0 -5 L0 5" stroke="white" stroke-width="2" />
              </g>
              <g transform="translate(320, 100)">
                  <circle cx="0" cy="0" r="20" fill="#f44336" opacity="0.8">
                      <animate attributeName="r" values="20;22;20" dur="2.5s" repeatCount="indefinite" />
                  </circle>
                  <path d="M-8 0 L8 0" stroke="white" stroke-width="2" />
              </g>
              <g transform="translate(280, 200)">
                  <path d="M0 0 L15 0 L7.5 15 Z" fill="#ffd700">
                      <animate attributeName="transform" attributeType="XML" type="translate" values="0,0; 0,-10; 0,0" dur="3s" repeatCount="indefinite" />
                  </path>
              </g>
              <g transform="translate(50, 250)">
                  <path d="M0 0 Q 30 -20, 60 -10 T 120 -30" stroke="#2196f3" stroke-width="3" fill="none">
                      <animate attributeName="d" values="M0 0 Q 30 -20, 60 -10 T 120 -30; M0 0 Q 30 -25, 60 -15 T 120 -35; M0 0 Q 30 -20, 60 -10 T 120 -30" dur="4s" repeatCount="indefinite" />
                  </path>
              </g>
          </svg>
      </div>
    <h2 class="blog-heading">
      <span aria-label="blog-emoji">✍️</span> Check out our Personal Finance Blog
    </h2>
    <div class="blog-cta">
       <a href="/blog" class="button button-secondary">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"/><path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"/><path d="M8 13h4"/><path d="M8 17h4"/></svg>
           View All Posts
      </a>
    </div>
  </div>
</section>

<style>
    .blog {
        background: linear-gradient(rgba(var(--color-primary), 0.05), rgba(var(--color-primary), 0.1));
        text-align: center;
        transition: transform 0.3s ease-in-out;
        position: relative;
    }

    .blog:hover {
         transform: translateY(-5px);
    }

     .blog .container{
        max-width: 900px;
        margin: 0 auto;
        padding: 4rem 1.5rem;
        border-radius: 24px;
         display: flex;
         flex-direction: column;
         align-items: center;
    }

    .blog h2 {
        font-size: 2.2rem;
        color: rgb(var(--color-text));
        margin-bottom: 2rem;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        transition: color 0.3s ease-in-out;
         position: relative;
    }

    .blog:hover h2 {
        color: rgb(var(--color-secondary));
    }
    .blog-heading span {
        font-size: 1.8rem;
    }
    .blog-svg-container{
       width: 200px;
        height: 200px;
       pointer-events: none;
        overflow: hidden;
         transition: all 0.3s ease;
       display: flex;
         justify-content: center;
         align-items: center;
        margin-bottom: 1rem;
    }
     .blog:hover .blog-svg-container{
           transform:  rotate(5deg);
     }

    .blog-svg {
       width: 100%;
         height: 100%;
           display: block;
           animation: floating 5s ease-in-out infinite;
    }


    .blog-cta {
        display: flex;
        justify-content: center;
         position: relative;

    }

    .blog a {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        text-decoration: none;
        transition: background-color 0.3s ease-in-out, transform 0.3s ease-in-out;
    }

    .blog a:hover{
        transform: scale(1.05);
    }
    .button svg {
        margin-right: 0.75rem;
        transition: transform 0.3s ease-in-out;
    }

    .blog a:hover svg{
        transform: translateX(3px);
    }

    @keyframes floating {
         0%{
            transform: translateY(0);
        }
         50%{
            transform: translateY(10px);
        }
         100%{
             transform: translateY(0);
        }
    }
    @media (max-width: 768px) {
        .blog h2 {
            font-size: 1.8rem;
        }
        .blog-heading span {
            font-size: 1.5rem;
        }
         .blog-svg-container {
            width: 150px;
            height: 150px;
         }
    }
</style>